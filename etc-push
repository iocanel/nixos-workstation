#!/usr/bin/env bash

# Script to apply local NixOS configuration files to /etc/nixos
# This pushes your local configuration to the system directory

set -euo pipefail

# Configuration
LOCAL_CONFIG_DIR="/home/iocanel/.nixos"
SYSTEM_CONFIG_DIR="/etc/nixos"

# Color output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

log_info() {
    echo -e "${GREEN}[INFO]${NC} $1"
}

log_warn() {
    echo -e "${YELLOW}[WARN]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if running with sufficient privileges
if [[ $EUID -ne 0 ]]; then
    log_error "This script must be run as root (use sudo)"
    exit 1
fi

# Check if local config directory exists
if [[ ! -d "$LOCAL_CONFIG_DIR" ]]; then
    log_error "Local configuration directory not found: $LOCAL_CONFIG_DIR"
    exit 1
fi

log_info "Applying local NixOS configuration to /etc/nixos..."

# Create backup directory with timestamp
BACKUP_DIR="/etc/nixos.backup.$(date +%Y%m%d_%H%M%S)"
log_info "Creating backup at: $BACKUP_DIR"
cp -r "$SYSTEM_CONFIG_DIR" "$BACKUP_DIR"

# Copy main configuration files
for file in configuration.nix hardware-configuration.nix; do
    if [[ -f "$LOCAL_CONFIG_DIR/$file" ]]; then
        log_info "Copying $file to /etc/nixos/..."
        cp "$LOCAL_CONFIG_DIR/$file" "$SYSTEM_CONFIG_DIR/"
    else
        log_warn "$file not found in $LOCAL_CONFIG_DIR"
    fi
done

# Copy modules directory if it exists
if [[ -d "$LOCAL_CONFIG_DIR/modules" ]]; then
    log_info "Copying modules directory to /etc/nixos/..."
    # Remove existing modules directory first to avoid conflicts
    rm -rf "$SYSTEM_CONFIG_DIR/modules"
    cp -r "$LOCAL_CONFIG_DIR/modules" "$SYSTEM_CONFIG_DIR/"
else
    log_warn "modules directory not found in $LOCAL_CONFIG_DIR"
fi

# Copy overlays directory if it exists
if [[ -d "$LOCAL_CONFIG_DIR/overlays" ]]; then
    log_info "Copying overlays directory to /etc/nixos/..."
    # Remove existing overlays directory first to avoid conflicts
    rm -rf "$SYSTEM_CONFIG_DIR/overlays"
    cp -r "$LOCAL_CONFIG_DIR/overlays" "$SYSTEM_CONFIG_DIR/"
else
    log_warn "overlays directory not found in $LOCAL_CONFIG_DIR"
fi

# Copy packages directory if it exists
if [[ -d "$LOCAL_CONFIG_DIR/packages" ]]; then
    log_info "Copying packages directory to /etc/nixos/..."
    # Remove existing packages directory first to avoid conflicts
    rm -rf "$SYSTEM_CONFIG_DIR/packages"
    cp -r "$LOCAL_CONFIG_DIR/packages" "$SYSTEM_CONFIG_DIR/"
else
    log_warn "packages directory not found in $LOCAL_CONFIG_DIR"
fi

# Ensure sync scripts don't get copied to /etc/nixos
if [[ -f "$SYSTEM_CONFIG_DIR/etc-pull" ]]; then
    log_info "Removing sync scripts from /etc/nixos..."
    rm -f "$SYSTEM_CONFIG_DIR/etc-pull" "$SYSTEM_CONFIG_DIR/etc-push"
fi

# Set proper ownership
log_info "Setting ownership of /etc/nixos files..."
chown -R root:root "$SYSTEM_CONFIG_DIR"

log_info "Configuration applied successfully!"
log_info "Backup created at: $BACKUP_DIR"
log_warn "Remember to run 'sudo nixos-rebuild switch' to apply changes"